{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2016",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["coverage", "dist", "node_modules", "tests"]
}
