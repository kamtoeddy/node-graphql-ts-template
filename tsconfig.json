{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2016",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["coverage", "dist", "node_modules", "tests"]
}
