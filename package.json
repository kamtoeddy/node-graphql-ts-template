{
  "name": "node-express-ts-template",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check-deps": "depcheck .",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
    "build": "swc src -d dist",
    "lint": "eslint ./src --ext .ts",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/index.js",
    "test": "swc & vitest run test",
    "test:coverage": "swc & vitest run coverage",
    "test:watch": "swc & vitest"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "apitoolz": "^0.3.16",
    "dotenv": "^16.0.3",
    "graphql": "^16.7.1",
    "graphql-type-json": "^0.3.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "uniqid": "^5.4.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.86",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "@types/uniqid": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "^8.2.1",
    "depcheck": "^1.4.3",
    "eslint": "5.16.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.0",
    "typescript": "5.0.4",
    "vitest": "^0.34.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
